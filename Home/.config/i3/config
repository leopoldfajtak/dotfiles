# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
# Keyboard layout switch
bindsym $mod+Shift+d exec setxkbmap de; exec pkill -RTMIN+1 i3blocks
bindsym $mod+Shift+u exec setxkbmap us; exec pkill -RTMIN+1 i3blocks


#Audoiio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 2 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 2 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 2 toggle

bindsym Print exec screenshot

set $Locker ~/.config/i3lock-extra && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hybernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
	bindsym r exec --no-startup-id systemctl reboot, mode "default"
	bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"
	
	#back to normal
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
bindsym $mod+F12 mode "$mode_system"

# window colors taken from base16 colorscheme git
#			border		background	text			indicator
client.focused		$foreground_hl	$highlight	$background		$highlight
client.focused_inactive	$background_hl	$background_hl	$foreground_hl		$foreground_secondary0
client.unfocused	$background_hl	$background	$foreground_hl		$background_hl
client.urgent		$red		$red		$background		$red
client.placeholder	$background	$background	$foreground_hl		$foreground_hl

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3blocks -c ~/.config/i3blocks.conf
	colors {
		background $background
		separator  $background_hl
		statusline $foreground
		#			border			background		text
		focused_workspace	$foreground_hl		$highlight		$background
		active_workspace	$foreground_hl		$foreground_secondary0	$background
		inactive_workspace	$foreground_secondary0	$background_hl		$foreground_hl
		urgent_workspace	$red			$red			$background
		binding_mode		$background		$yellow			$background
	}
}

#borders
